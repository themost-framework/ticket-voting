<% layout('empty') -%>
<form class="form-login" method="post" action="">
    <h1 class="h3 mb-2 font-weight-normal">Please sign in</h1>
    <div class="mb-2">
        <label for="username" class="sr-only">User</label>
        <input type="text" name="username" id="username" class="form-control" placeholder="User" value="admin" required autofocus>
    </div>
    <div class="mb-2">
        <label for="password" class="sr-only">Password</label>
        <input type="password" name="password" id="password" class="form-control" placeholder="Password" value="secret" required>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
</form>
